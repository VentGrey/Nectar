{
	"label": "Adapta Theme",
	"description": "An adaptive Gtk+ theme based on Material Design Guidelines.",
	"license": "GPLv2",
	"category": "Themes",
	"scripts": {
		"exec": {
			"label": "Install",
			"command": "run-as-root dnf -y install adapta-gtk-theme"
		},
		"undo": {
			"label": "Remove",
			"command": "run-as-root dnf -y remove adapta-gtk-theme"
		},
		"status": { "command": "rpm --quiet --query adapta-gtk-theme" }
	}
}
