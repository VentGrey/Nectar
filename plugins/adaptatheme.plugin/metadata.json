{
	"label": "Arc Theme",
	"description": "An adaptive Gtk+ theme based on Material Design Guidelines.",
	"license": "GPLv2",
	"category": "Themes",
	"scripts": {
		"exec": {
			"label": "Install",
			"command": "run-as-root emerge --ask n arc-theme"
		},
		"undo": {
			"label": "Remove",
			"command": "run-as-root emerge -C --ask n arc-theme"
		},
		"status": { "command": "equery --quiet list arc-theme" }
	}
}
